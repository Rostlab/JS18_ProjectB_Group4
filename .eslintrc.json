{
    "extends": "airbnb-base",
    "rules": {
        "no-console": "off",
        "no-unused-vars": "warn",
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ]
    },
    "env": {
        "node": true,
        "mocha": true
    }
}